<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.servicestock.mapper.StockDao">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.example.servicestock.mapper.entity.StockDO">
        <result column="id" property="id"/>
        <result column="goods_id" property="goodsId"/>
        <result column="stock" property="stock"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, goods_id, stock
    </sql>

    <!-- 通用新增列 -->
    <sql id="Insert_Column_List">
         id, goods_id, stock
    </sql>


    <update id="addStock" parameterType="com.example.servicestock.mapper.entity.StockDO">
        update
        goods
        set
        stock = stock + #{stockDO.operatorStockNum}
        where goods_id = #{stockDO.goodsId} and stock = #{stockDO.stock}
    </update>

    <update id="reduceStock" parameterType="com.example.servicestock.mapper.entity.StockDO">
        update
        goods
        set
        stock = stock - #{stockDO.operatorStockNum}
        where goods_id = #{stockDO.goodsId} and stock = #{stockDO.stock}
    </update>

</mapper>

#替换成自带skywalking的jdk,配置 SW_AGENT_NAME 和 SW_AGENT_COLLECTOR_BACKEND_SERVICES 环境变量
FROM apache/skywalking-java-agent:8.7.0-jdk8

LABEL author=zlf
LABEL description=网关
LABEL version=1.0

WORKDIR /gateway

ARG JVM_PARAM
ARG JAVA_PARAM
ARG JAR_FILE
COPY ${JAR_FILE} app.jar

EXPOSE 8884 8884

ENV JVM_PARAM_INNER=${JVM_PARAM}
ENV JAVA_PARAM_INNER=${JAVA_PARAM}
ENV JAVA_SKYWALKING_AGENT_INNER=${JAVA_SKYWALKING_AGENT}
ENTRYPOINT java ${JVM_PARAM_INNER} ${JAVA_SKYWALKING_AGENT_INNER} -jar app.jar ${JAVA_PARAM_INNER}